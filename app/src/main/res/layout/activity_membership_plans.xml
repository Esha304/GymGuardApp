<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MembershipPlansActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/secondRow"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewPlans"
        android:padding="16dp">

        <ImageView
            android:id="@+id/paypalImage"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/img" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Pay with PayPal"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>